pipeline {
  agent any

  tools {
    nodejs "node"
  }

  stages {
    stage('build') {
      steps {
        git branch: 'develop', url: 'https://github.com/Proyecto-SQA/TallerJenkins.git'
          sh 'npm install'
      }
    }

    stage('unit-test') {
      steps {
          sh 'npm run test'
      }
    }

    stage('deploy-dev') {
      steps {
          echo 'Deploy to test env'
      }
    }

    stage('test automation') {
      steps {
          echo 'run test automation .... '
      }
    }

    stage('Parallel Stages') {
        parallel {
            stage('Stage 1') {
                steps {
                    // Define las instrucciones para la etapa 1
                    sh 'echo "Ejecutando la Etapa 1"'
                }
            }

            stage('Stage 2') {
                steps {
                    // Define las instrucciones para la etapa 2
                    sh 'echo "Ejecutando la Etapa 2"'
                }
            }

            // Agrega más etapas paralelas según sea necesario
        }
    }

    stage('Deploy-prod') {
      steps {
          echo 'run test automation .... '
      }
    }

  }
}