pipeline {
  agent any

  tools {
    nodejs "node"
  }

  stages {
    stage('install') {
      steps {
        git branch: 'develop', url: 'https://github.com/Proyecto-SQA/TallerJenkins.git'
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('test') {
      steps {
        dir('frontend') {
          sh 'npm run test'
        }
      }
    }

  }

}